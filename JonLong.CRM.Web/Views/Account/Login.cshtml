@{
    Layout = null;
}
@using JonLong.CRM.Web.Models
@model LoginModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jon Long CRM Login</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/css/reset.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.css")" type="text/css" media="screen" />
    <style type="text/css">
        ul {
            list-style: none;
        }

        .validation-summary-errors {
        }
    </style>

</head>
<body id="login">
    @using (Html.BeginForm("login", "Account"))
    {
        <div id="login-wrapper" class="png_bg">
            <div id="login-top">
                <h1>
                    Jon Long CRM
                </h1>
                <img id="logo" src="@Url.Content("~/Content/images/logo.jpg")" alt="Simpla Admin logo" />
            </div>
            <div id="login-content">

                <div class="notification error png_bg">

                    @Html.ValidationSummary(true, "")

                </div>
                <p>
                    <label>
                        Username

                    </label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "text-input", @maxlength = "20" })
                </p>
                <div class="clear">
                </div>
                <p>
                    <label>
                        Password
                    </label>
                    @Html.PasswordFor(m => m.Password, new { @class = "text-input", @maxlength = "20" })
                </p>
                <div class="clear">
                </div>
                <p id="remember-password">
                    @Html.CheckBoxFor(m => m.RememberMe)Remember me
                </p>
                <div class="clear">
                </div>
                <p>
                    <input class="button" type="submit" value="Sign In" />
                </p>
            </div>
        </div>
    }

</body>
</html>
