@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model JonLong.CRM.Web.Models.UserModel

<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3>
            Edit User
        </h3>
        <ul class="content-box-tabs">
            <li><a href=" @Url.Action("index") " class=" button">Back to list</a></li>
        </ul>
        <div class="clear">
        </div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content">
        <div style="color:Red; font-size:large">
            @Html.ValidationSummary(true, "")
        </div>
        <div class="tab-content default-tab" id="tab2">
            @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form" }))
            {
                @Html.Hidden("UserId",Model.User.UserId)
                <fieldset>
                    <p>
                        <label>
                            login name
                        </label>
                        @Html.TextBoxFor(m => m.User.LoginName, new { @class = "text-input small-input", @style = "width:150px" ,@disabled = true})
                    </p>
                    <p>
                        <label>
                            Role list
                        </label>
                        @foreach (var item in Model.Roles)
                        {
                            if (Model.UserRoles.Contains(item.RoleId))
                            {
                                <input type="checkbox" name="UserRoles" checked="checked" value="@item.RoleId" />@item.Name
                            }
                            else
                            {
                                <input type="checkbox" name="UserRoles" value="@item.RoleId" />@item.Name
                            }

                        }
                    </p>
                    <p></p>
                    <p>
                        <input class="button" type="submit" value="Submit" />

                    </p>
                </fieldset>
                <div class="clear">
                </div>
            }

        </div>
    </div>
    <!-- End .content-box-content -->
</div>

