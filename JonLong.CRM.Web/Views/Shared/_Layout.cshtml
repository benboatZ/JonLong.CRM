@using JonLong.CRM.Web.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jon Long CRM</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/reset.css")" type="text/css" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.css")" type="text/css" media="screen" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>

    @RenderSection("head", required: false)
</head>
<body>
    <div id="body-wrapper">
        <!-- Wrapper for the radial gradient background -->
        <div id="sidebar">
            <div id="sidebar-wrapper">
                <!-- Sidebar with logo and menu -->
                <h1 id="sidebar-title">
                    <a href="@Url.Action("index","home")">Simpla Admin</a>
                </h1>
                <!-- Logo (221px wide) -->
                <a href="#">
                    <img id="logo" src="@Url.Content("~/Content/images/logo.jpg")" alt="Simpla Admin logo" />
                </a>
                <!-- Sidebar Profile links -->
                <div id="profile-links">
                    Hello, <a href="javascript:void();" title="Edit your profile">
                    @{
                        var user = AccountHelper.GetCurrentUser();
                        if(user==null){
                            user = new JonLong.CRM.Models.User();
                        }
                    }
                    @user.CustomerName (@user.LoginName)</a><br />
                    <br />
                    <label style="color:white; font-size:larger">@DateTime.Now.ToString("yyyy-MM-dd")</label>&nbsp;&nbsp;| 
                   <a href="@Url.Action("LogOff", "Account")" title="Sign Out">
                        Sign
                        Out
                    </a>
                </div>
                <ul id="main-nav">
                    <!-- Accordion Menu -->
                    <li>
                        <a href="@Url.Action("index","home")" class="nav-top-item no-submenu">
                            <!-- Add the class "no-submenu" to menu items with no sub menu -->
                            Index
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav-top-item current">
                            <!-- Add the class "current" to current menu item -->
                            Daily Operation
                        </a>
                        <ul>
                            <li><a class="current" href="@Url.Action("index","Order")">Order & Forecast</a></li>
                            <li><a href="@Url.Action("index","Enroute")">En route</a></li>
                            <!-- Add class "current" to sub menu items also -->
                            <li><a href="@Url.Action("index","Arrived")">Arrived</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="nav-top-item">Customer Reconciliation </a>
                        <ul>
                            <li><a href="@Url.Action("Index","OrderVariance")">Order Variance Reconciliation</a></li>
                            <li><a href="#">Accounts Receivable Reconciliation</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="nav-top-item">Logistics </a>
                        <ul>
                            <li><a href="@Url.Action("index","JLWarehouse")">JONLONG warehouse</a></li>
                            <li><a href="@Url.Action("index","CustomerWarehouse")">Customer warehouse</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="nav-top-item">Pre load cabinet </a>
                        <ul>
                            <li><a href="@Url.Action("index","PreLoadCabinet")">Preload Cabinet</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="nav-top-item">Settings </a>
                        <ul>
                            <li><a href="@Url.Action("index","Role")">Role</a></li>
                            <li><a href="@Url.Action("index","User")">User</a></li>
                            <li><a href="#">Your Profile</a></li>
                            <li><a href="#">Users and Permissions</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- End #main-nav -->
                <div id="messages" style="display: none">
                    <!-- Messages are shown when a link with these attributes are clicked: href="#messages" rel="modal"  -->
                    <h3>
                        3 Messages
                    </h3>
                    <p>
                        <strong>17th May 2009</strong> by Admin<br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus magna. Cras in
                        mi at felis aliquet congue. <small>
                            <a href="#" class="remove-link" title="Remove message">
                                Remove
                            </a>
                        </small>
                    </p>
                    <p>
                        <strong>2nd May 2009</strong> by Jane Doe<br />
                        Ut a est eget ligula molestie gravida. Curabitur massa. Donec eleifend, libero at
                        sagittis mollis, tellus est malesuada tellus, at luctus turpis elit sit amet quam.
                        Vivamus pretium ornare est. <small>
                            <a href="#" class="remove-link" title="Remove message">
                                Remove
                            </a>
                        </small>
                    </p>
                    <p>
                        <strong>25th April 2009</strong> by Admin<br />
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus magna. Cras in
                        mi at felis aliquet congue. <small>
                            <a href="#" class="remove-link" title="Remove message">
                                Remove
                            </a>
                        </small>
                    </p>
                    <form action="#" method="post">
                        <h4>
                            New Message
                        </h4>
                        <fieldset>
                            <textarea class="textarea" name="textfield" cols="79" rows="5"></textarea>
                        </fieldset>
                        <fieldset>
                            <select name="dropdown" class="small-input">
                                <option value="option1">Send to...</option>
                                <option value="option2">Everyone</option>
                                <option value="option3">Admin</option>
                                <option value="option4">Jane Doe</option>
                            </select>
                            <input class="button" type="submit" value="Send" />
                        </fieldset>
                    </form>
                </div>
                <!-- End #messages -->
            </div>
        </div>
        <!-- End #sidebar -->
        <div id="main-content">
            <!-- Main Content Section with everything -->
            <noscript>
                <!-- Show a notification if the user has disabled javascript -->
                <div class="notification error png_bg">
                    <div>
                        Javascript is disabled or is not supported by your browser. Please <a href="http://browsehappy.com/"
                                                                                              title="Upgrade to a better browser">upgrade</a> your browser or <a href="http://www.google.com/support/bin/answer.py?answer=23852"
                                                                                                                                                                 title="Enable Javascript in your browser">enable</a> Javascript to navigate
                        the interface properly.
                    </div>
                </div>
            </noscript>
            <!-- Page Head -->
            @RenderBody()
            <!-- End Notifications -->
            <div id="footer">
                <small>
                    <!-- Remove this notice or replace it with whatever you want -->
                    &#169; Copyright 2014 JON LONG | Powered by <a href="#">
                        JON LONG
                    </a> 
                </small>
            </div>
            <!-- End #footer -->
        </div>
        <!-- End #main-content -->
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
