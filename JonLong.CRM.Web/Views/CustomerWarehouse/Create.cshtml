@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model JonLong.CRM.Web.Models.WarehouseEditModel
@section head{
    <script type="text/javascript" src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <style>
        .table_b td {
            border: 1px solid #696969;
        }

        .table_b th {
            border: 1px solid #696969;
        }
    </style>
}
<div class="content-box">
    <!-- Start Content Box -->
    <div class="content-box-header">
        <h3>
            Create Warehouse
        </h3>
        <ul class="content-box-tabs">
            <li><a href="@Url.Action("index")" class="button">Back to list</a></li>
        </ul>
        <div class="clear">
        </div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content">

        <div class="tab-content default-tab" id="tab2">
            @using (Html.BeginForm("Create", "CustomerWarehouse", FormMethod.Post, new { @class = "form" }))
            {
                <table class="table_b">
                    <tr class="alt-row">
                        <th>Model No. </th>
                        <th><input id="ModelNo" name="ModelNo" type="text"></th>
                        <th>Shoes</th>
                        <th>
                            <select id="Shoe" name="Shoe">
                                @foreach (var pair in Model.Shoes)
                                {
                                    <option value="@pair.Key">@pair.Value</option>
                                }
                            </select>
                        </th>
                        <th colspan="6"></th>

                    </tr>

                    <tr>
                        <td id="shoe0">@Model.ShoeSizes[0]</td>
                        <td><input class="size" name="Size1" value="@Model.Detail.Size1" /></td>
                        <td id="shoe1">@Model.ShoeSizes[1]</td>
                        <td><input class="size" name="Size2" value="@Model.Detail.Size2" /></td>
                        <td id="shoe2">@Model.ShoeSizes[2]</td>
                        <td><input class="size" name="Size3" value="@Model.Detail.Size3" /></td>
                        <td id="shoe3">@Model.ShoeSizes[3]</td>
                        <td><input class="size" name="Size4" value="@Model.Detail.Size4" /></td>
                        <td id="shoe4">@Model.ShoeSizes[4]</td>
                        <td><input class="size" name="Size5" value="@Model.Detail.Size5" /></td>
                    </tr>
                    <tr class="alt-row">

                        <td id="shoe5">@Model.ShoeSizes[5]</td>
                        <td><input class="size" name="Size6" value="@Model.Detail.Size6" /></td>
                        <td id="shoe6">@Model.ShoeSizes[6]</td>
                        <td><input class="size" name="Size7" value="@Model.Detail.Size7" /></td>
                        <td id="shoe7">@Model.ShoeSizes[7]</td>
                        <td><input class="size" name="Size8" value="@Model.Detail.Size8" /></td>
                        <td id="shoe8">@Model.ShoeSizes[8]</td>
                        <td><input class="size" name="Size9" value="@Model.Detail.Size9" /></td>
                        <td id="shoe9">@Model.ShoeSizes[9]</td>
                        <td><input class="size" name="Size10" value="@Model.Detail.Size10" /></td>
                    </tr>
                    <tr class="alt-row">
                        <td id="shoe10">@Model.ShoeSizes[10]</td>
                        <td><input class="size" name="Size11" value="@Model.Detail.Size11" /></td>
                        <td id="shoe11">@Model.ShoeSizes[11]</td>
                        <td><input class="size" name="Size12" value="@Model.Detail.Size12" /></td>
                        <td id="shoe12">@Model.ShoeSizes[12]</td>
                        <td><input class="size" name="Size13" value="@Model.Detail.Size13" /></td>
                        <td id="shoe13">@Model.ShoeSizes[13]</td>
                        <td><input class="size" name="Size14" value="@Model.Detail.Size14" /></td>
                        <td id="shoe14">@Model.ShoeSizes[14]</td>
                        <td><input class="size" name="Size15" value="@Model.Detail.Size15" /></td>
                    </tr>
                    <tr class="alt-row">
                        <td id="shoe15">@Model.ShoeSizes[15]</td>
                        <td><input class="size" name="Size16" value="@Model.Detail.Size16" /></td>
                        <td id="shoe16">@Model.ShoeSizes[16]</td>
                        <td><input class="size" name="Size17" value="@Model.Detail.Size17" /></td>
                        <td id="shoe17">@Model.ShoeSizes[17]</td>
                        <td><input class="size" name="Size18" value="@Model.Detail.Size18" /></td>
                        <td id="shoe18">@Model.ShoeSizes[18]</td>
                        <td><input class="size" name="Size17" value="@Model.Detail.Size19" /></td>
                        <td id="shoe19">@Model.ShoeSizes[19]</td>
                        <td><input class="size" name="Size18" value="@Model.Detail.Size20" /></td>
                    </tr>
                    <tr class="alt-row">
                        <td>Total</td>
                        <td colspan="9"><label id="Total1" name="Total1">@Model.Detail.Total</label>
                            <input type="hidden" id="Total" name="Total" value="@Model.Detail.Total" />
                        </td>
                    </tr>
                </table>

                <div class="clear">
                    <p></p>
                </div>
                <div style="text-align:center">
                    <p>
                        <input class="button" type="submit" onclick="return validate();" value="Save" />&nbsp;&nbsp;

                        <a href="@Url.Action("index")" class="button">Cancel</a>
                    </p>
                </div>

            }

        </div>
    </div>
    <!-- End .content-box-content -->
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            
            $('[type=date], .size').change(function () {
                var total = 0;
                if (!$.isNumeric(this.value)) {
                    alert('Please input number.');
                    this.value = 0;
                    return;
                }
                $('[type=date], .size').each(function () {
                    total += parseInt($(this).val());
                });
                $("#Total1").text(total);
                $("#Total").val(total);
            });
        });
        
        function validate() {
            if ($("#ModelNo").val() == "") {
                alert("please input ModelNo.");
                $("#ModelNo").focus();
                return false;
            }

            if ($('#Shoe').val() == "" || $('#Shoe').val() == "ALL") {
                alert('Please chose shoe.');
                $('#Shoe').focus();
                return false;
            }
            
            if (parseInt($('#Total').val()) < 0) {
                alert('No less than 0!');
                $('#Total').focus();
                return false;
            }

            return true;
        }

    </script>
}



